# Auto detect text files and perform LF normalization
* text=auto

# Python files - always use LF
*.py text eol=lf
*.pyw text eol=lf
*.pyi text eol=lf

# Configuration files
*.ini text eol=lf
*.cfg text eol=lf
*.toml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows batch files - use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Force binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.db binary
*.sqlite3 binary
